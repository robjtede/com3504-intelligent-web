extends ../layout

block main
  h2 Tracking Info
  div.tracking-info
    p.tracking-player
    p.tracking-team
    p.tracking-author
    p.tracking-mode

  div.player-profiles

  h2 Stats
  div.stats
    div.chart
      canvas(width="600" height="400")
    div.table

  div.paging
    div.page-nav.js-page-nav
      a(href="#").prev-page.js-prev-page.button &larr; Prev Page

    div.page-size
      div
        label(for="js-page-size") Tweets per page:
        span.js-page-size-indicator N/A
      div
        input(type="range" min="5" max="200" step="5", value="50")#js-page-size.js-page-size

    div.page-nav.js-page-nav
      a(href="#").next-page.js-next-page.button Next Page &rarr;

  div.remote-tweets-button
    p Get New Tweets

  div.tweet-list
